import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;

public class Main {
    public static void main(String[] args) {
        // Define o caminho do arquivo JSON
        String caminhoArquivo = "projeto_mes_um/src/database/db.json";

        // Chama a função lerJSON com o caminho do arquivo como argumento
        lerJSON(caminhoArquivo);
    }

    public static void lerJSON(String caminhoArquivo) {
        // Cria um parser para JSON
        JSONParser parser = new JSONParser();

        try {
            // Obtém o diretório atual de execução do programa
            String diretorioAtual = new File(".").getCanonicalPath();

            // Constrói o caminho completo para o arquivo db.json
            String caminhoCompleto = diretorioAtual + "/" + caminhoArquivo;

            try (FileReader reader = new FileReader(caminhoCompleto)) {
                // Parse o arquivo JSON
                Object obj = parser.parse(reader);

                // Converte o objeto para um JSONObject
                JSONObject jsonObject = (JSONObject) obj;

                // Obtém os dados do JSON
                String nome = (String) jsonObject.get("nome");
                String sobrenome = (String) jsonObject.get("sobrenome");
                Long idade = (Long) jsonObject.get("idade");

                // Imprime os dados
                System.out.println("Nome: " + nome);
                System.out.println("Sobrenome: " + sobrenome);
                System.out.println("Idade: " + idade);
            } catch (IOException | ParseException e) {
                // Em caso de erro, imprime o stack trace (rastreamento do erro)
                e.printStackTrace();
            }

        } catch (IOException e) {
            // Em caso de erro, imprime o stack trace (rastreamento do erro)
            e.printStackTrace();
        }
    }
}







